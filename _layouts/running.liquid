---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">
      <!-- {{ page.title }} -->
      Running and Other Fitness Activities
    </h1>
    {% if page.description %}
      <p class="post-description">{{ page.description }}</p>
    {% endif %}
  </header>
  <article>
    <div class="card p-3">
      <div class="two alt-two">
        <h2>
          <span>Recent Fitness Activities</span>
        </h2>
      </div>
      <hr class="hr-text" data-content=" - - - ">
      <ul class="card-text font-weight-light list-group list-group-flush">
        {% assign running = site.running | sort: 'date' | reverse %}
        <div class="row">
        {% for run in running %}
          {% if run.location %}
                <div class="col-xs-4 cl-sm-6 col-md-6 mt-2 mt-md-0 mb-3">
                  {{ run.embed }}
                  <div class="caption col-11"><i class="fas fa-location-dot"></i>
                  {{ run.location }} - {{ run.track }}<br/>
                  <i class="fa-solid fa-person-walking"></i>
                  {{ run.slow }} - <i class="fa-solid fa-person-running"></i>
                  {{ run.fast }} - <i class="fa-solid fa-chart-line"></i>
                  {{ run.avg }} Min/KM</div>
                </div>
          {% endif %}
        {% endfor %}
        </div>
      </ul>
      <hr class="hr-text" data-content="Running Highlights From Instagram">

      <div class="d-none d-lg-block">
        <div class='sk-ww-instagram-story-highlights' data-embed-id='25401530'></div>
      </div>
      <div class="d-lg-none d-xl-none">
        <div class='sk-ww-instagram-story-highlights' data-embed-id='25401539'></div>
      </div>
      <script
        src='https://widgets.sociablekit.com/instagram-story-highlights/widget.js'
        async
        defer></script>
    </div>
  </article>
</div>